    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragmento_azul"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="com.example.fragmentos.AzulFragment"
        tools:layout="@layout/fragment_azul"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1">


        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fragmento_rojo"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:name="com.example.fragmentos.RojoFragment"
            tools:layout="@layout/fragment_rojo"/>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragmento_verde"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:name="com.example.fragmentos.VerdeFragment"
        tools:layout="@layout/fragment_verde"/>

